<?xml version="1.0" encoding="utf-8"?>
<!-- Linear Layout with vertical orientation and other properties -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/l1m1_cover01"
    tools:context=".LoginMain02"
    android:paddingBottom="100dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#99000000"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/imageView13"
            android:layout_gravity="center"
            android:layout_width="138dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/precysion_logo01"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/textView5"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduction to Graphic Design" />

        <TextView
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="20sp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In this course you'll gonna learn all about unique things of Graphic Design. " />

        <TextView
            android:id="@+id/textView8"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe Left To Continue..." />

    </LinearLayout>
</ScrollView>