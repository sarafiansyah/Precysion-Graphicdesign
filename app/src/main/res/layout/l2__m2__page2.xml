<?xml version="1.0" encoding="utf-8"?>
<!-- Linear Layout with vertical orientation and other properties -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context=".LoginMain02">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="100dp"
        >

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="322dp"
            android:clickable="false">
        </WebView>

        <TextView
            android:paddingTop="20dp"
            android:id="@+id/textView5"
            android:fontFamily="@font/poppins_regular"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Design Thinking" />

        <TextView
            android:id="@+id/textView6"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18sp"
            android:justificationMode="inter_word"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Design is not just about making things pretty; it is about making something functional and attractive at the same time." />

        <TextView
            android:id="@+id/textView8"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe Left To Continue..." />

    </LinearLayout>
</ScrollView>